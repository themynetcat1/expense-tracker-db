<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>Panel | Finans Takip</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card-header { font-weight: bold; }
        .text-expense { color: #dc3545; }
        .text-income { color: #198754; }
    </style>
</head>
<body class="bg-light">

    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container">
            <span class="navbar-brand mb-0 h1">üëã Merhaba, <%= username %></span>
            <div>
                <button type="button" class="btn btn-primary btn-sm me-2" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
                    ‚ûï Kategori Ekle
                </button>
                
                <a href="/reports" class="btn btn-warning btn-sm me-2">üìä Raporlar</a>
                <a href="/logout" class="btn btn-outline-light btn-sm">√áƒ±kƒ±≈ü Yap</a>
            </div>
        </div>
    </nav>

    <div class="container">
        
        <div class="row mb-4 text-center">
            <div class="col-md-6">
                <div class="card shadow-sm border-danger">
                    <div class="card-body">
                        <h5 class="card-title text-muted">Bug√ºnk√º Toplam Gider</h5>
                        <h2 class="text-danger">- ‚Ç∫<%= parseFloat(stats.total_expense).toFixed(2) %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card shadow-sm border-success">
                    <div class="card-body">
                        <h5 class="card-title text-muted">Bug√ºnk√º Toplam Gelir</h5>
                        <h2 class="text-success">+ ‚Ç∫<%= parseFloat(stats.total_income).toFixed(2) %></h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-4">
            
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-white fw-bold">Paran Nereye Gidiyor? üç∞</div>
                    <div class="card-body">
                        <canvas id="categoryChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-white fw-bold">7 G√ºnl√ºk Harcama Trendi üìà</div>
                    <div class="card-body">
                        <canvas id="trendChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-white fw-bold">Bu Ay: Gelir vs Gider üìä</div>
                    <div class="card-body">
                        <canvas id="cashflowChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            
            <div class="col-md-6">
                <div class="card shadow mb-4">
                    <div class="card-header bg-danger text-white">üìâ Gider Ekle</div>
                    <div class="card-body">
                        <form action="/add-expense" method="POST">
                            <div class="row mb-2">
                                <div class="col">
                                    <input type="number" step="0.01" name="amount" class="form-control" placeholder="Tutar (TL)" required>
                                </div>
                                <div class="col">
                                    <input type="date" name="date" class="form-control" value="<%= new Date().toISOString().split('T')[0] %>" required>
                                </div>
                            </div>
                            <div class="mb-2">
                                <select name="category_id" class="form-select">
                                    <% categories.forEach(cat => { %>
                                        <% if(cat.category_type !== 'INCOME') { %>
                                            <option value="<%= cat.category_id %>"><%= cat.category_name %></option>
                                        <% } %>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="mb-2">
                                <input type="text" name="description" class="form-control" placeholder="A√ßƒ±klama (Opsiyonel)">
                            </div>
                            <button type="submit" class="btn btn-danger w-100">Gider Kaydet</button>
                        </form>
                    </div>
                </div>

                <h6 class="text-muted">Son Harcamalar</h6>
                <ul class="list-group mb-4">
                    <% expenses.forEach(item => { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong><%= item.category_name %></strong> <small class="text-muted">(<%= item.description %>)</small>
                                <br>
                                <small class="text-secondary"><%= new Date(item.expense_date).toLocaleDateString('tr-TR') %></small>
                            </div>
                            <span class="badge bg-danger rounded-pill">- ‚Ç∫<%= parseFloat(item.amount).toFixed(2) %></span>
                        </li>
                    <% }) %>
                    <% if(expenses.length === 0) { %> <li class="list-group-item text-center text-muted">Hen√ºz kayƒ±t yok.</li> <% } %>
                </ul>
            </div>

            <div class="col-md-6">
                
                <div class="card shadow mb-4">
                    <div class="card-header bg-success text-white">üìà Gelir Ekle</div>
                    <div class="card-body">
                        <form action="/add-income" method="POST">
                            <div class="row mb-2">
                                <div class="col">
                                    <input type="number" step="0.01" name="amount" class="form-control" placeholder="Tutar (TL)" required>
                                </div>
                                <div class="col">
                                    <input type="date" name="date" class="form-control" value="<%= new Date().toISOString().split('T')[0] %>" required>
                                </div>
                            </div>
                            <div class="mb-2">
                                <select name="category_id" class="form-select">
                                    <% categories.forEach(cat => { %>
                                        <% if(cat.category_type !== 'EXPENSE') { %>
                                            <option value="<%= cat.category_id %>"><%= cat.category_name %></option>
                                        <% } %>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="mb-2">
                                <input type="text" name="description" class="form-control" placeholder="A√ßƒ±klama (Opsiyonel)">
                            </div>
                            <button type="submit" class="btn btn-success w-100">Gelir Kaydet</button>
                        </form>
                    </div>
                </div>

                <h6 class="text-muted">Son Gelirler</h6>
                <ul class="list-group mb-4">
                    <% incomes.forEach(item => { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong><%= item.category_name %></strong> <small class="text-muted">(<%= item.description %>)</small>
                                <br>
                                <small class="text-secondary"><%= new Date(item.income_date).toLocaleDateString('tr-TR') %></small>
                            </div>
                            <span class="badge bg-success rounded-pill">+ ‚Ç∫<%= parseFloat(item.amount).toFixed(2) %></span>
                        </li>
                    <% }) %>
                    <% if(incomes.length === 0) { %> <li class="list-group-item text-center text-muted">Hen√ºz kayƒ±t yok.</li> <% } %>
                </ul>
            </div>

        </div>
    </div>

<div class="modal fade" id="addCategoryModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Yeni Kategori Olu≈ütur</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form action="/add-category" method="POST">
                        <div class="mb-3">
                            <label class="form-label">Kategori Adƒ±</label>
                            <input type="text" name="category_name" class="form-control" placeholder="√ñrn: Tatil, Kira, Kedi..." required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Bu kategori ne i√ßin?</label>
                            <select name="category_type" class="form-select">
                                <option value="EXPENSE">Gider (Harcama)</option>
                                <option value="INCOME">Gelir (Kazan√ß)</option>
                                <option value="BOTH">Her ƒ∞kisi de</option>
                            </select>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // Server'dan gelen veriyi al
        const data = <%- JSON.stringify(chartData) %>;

        // 1. PASTA GRAFƒ∞K (Kategoriler)
        const ctxPie = document.getElementById('categoryChart');
        if (ctxPie) {
            new Chart(ctxPie, {
                type: 'pie', // 'pie' da yapabilirsin
                data: {
                    labels: data.pieLabels,
                    datasets: [{
                        data: data.pieValues,
                        backgroundColor: [
                            '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF', '#FF9F40'
                        ],
                        hoverOffset: 4
                    }]
                },
                options: { responsive: true }
            });
        }

        // 2. √áƒ∞ZGƒ∞ GRAFƒ∞K (Trend)
        const ctxLine = document.getElementById('trendChart');
        if (ctxLine) {
            new Chart(ctxLine, {
                type: 'line',
                data: {
                    labels: data.lineLabels,
                    datasets: [{
                        label: 'G√ºnl√ºk Harcama',
                        data: data.lineValues,
                        borderColor: '#dc3545',
                        backgroundColor: 'rgba(220, 53, 69, 0.2)',
                        fill: true,
                        tension: 0.3
                    }]
                },
                options: { scales: { y: { beginAtZero: true } } }
            });
        }

        // 3. S√úTUN GRAFƒ∞K (Gelir vs Gider)
        const ctxBar = document.getElementById('cashflowChart');
        if (ctxBar) {
            new Chart(ctxBar, {
                type: 'bar',
                data: {
                    labels: ['Bu Ay'],
                    datasets: [
                        {
                            label: 'Gelir',
                            data: [data.barIncome],
                            backgroundColor: '#198754'
                        },
                        {
                            label: 'Gider',
                            data: [data.barExpense],
                            backgroundColor: '#dc3545'
                        }
                    ]
                },
                options: { scales: { y: { beginAtZero: true } } }
            });
        }
    </script>
    
</body>
</html>