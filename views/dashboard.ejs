                                <div class="col">
                                    <input type="number" step="0.01" name="amount" class="form-control" placeholder="Tutar (TL)" required>
                                </div>
                                <div class="col">
                                    <input type="date" name="date" class="form-control" value="<%= new Date().toISOString().split('T')[0] %>" required>
                                </div>
                            </div>
                            <div class="mb-2">
                                <select name="category_id" class="form-select">
