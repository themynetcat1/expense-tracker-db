<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-chart-sankey"></script>

    <script>
        // Server'dan gelen veriyi al
        const data = <%- JSON.stringify(chartData) %>;

        // 1. PASTA GRAFÄ°K (Kategoriler)
        const ctxPie = document.getElementById('categoryChart');
        if (ctxPie) {
            new Chart(ctxPie, {
                type: 'pie', // 'pie' da yapabilirsin
                data: {
                    labels: data.pieLabels,
                    datasets: [{
                        data: data.pieValues,
                        backgroundColor: [
                            '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF', '#FF9F40'
                        ],
                        hoverOffset: 4
                    }]
                },
                options: { responsive: true }
            });
        }

        // 2. Ã‡Ä°ZGÄ° GRAFÄ°K (BAKÄ°YE AKIÅI - YEÅÄ°L/KIRMIZI EFEKTLÄ°)
        const ctxLine = document.getElementById('trendChart');
        if (ctxLine) {
            new Chart(ctxLine, {
                type: 'line',
                data: {
                    labels: data.lineLabels,
                    datasets: [{
                        label: 'Toplam Bakiye',
                        data: data.lineValues,
                        fill: true,
                        tension: 0.4, // Ã‡izgiyi yumuÅŸatÄ±r
                        // RENK SÄ°HRÄ° BURADA BAÅLIYOR ğŸ‘‡
                        segment: {
                            borderColor: ctx => {
                                // EÄŸer bir sonraki nokta daha yukarÄ±daysa (p1 > p0) YEÅÄ°L, deÄŸilse KIRMIZI
                                // (Chart.js'de Y ekseni yukarÄ± doÄŸru artar, p1.parsed.y deÄŸeri bÃ¼yÃ¼kse yukarÄ±dadÄ±r)
                                return ctx.p0.parsed.y < ctx.p1.parsed.y ? '#198754' : '#dc3545';
                            },
                            backgroundColor: ctx => {
                                // AltÄ±ndaki alanÄ±n rengi de hafifÃ§e deÄŸiÅŸsin
                                return ctx.p0.parsed.y < ctx.p1.parsed.y ? 'rgba(25, 135, 84, 0.1)' : 'rgba(220, 53, 69, 0.1)';
                            }
                        },
                        pointBackgroundColor: '#fff',
                        pointBorderColor: '#000',
                        borderWidth: 3
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: { y: { beginAtZero: true } },
                    plugins: {
                        legend: { display: false }, // Tek Ã§izgi olduÄŸu iÃ§in etikete gerek yok
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return 'Bakiye: â‚º' + context.parsed.y.toFixed(2);
                                }
                            }
                        }
                    }
                }
            });
        }

        // 3. SÃœTUN GRAFÄ°K (Gelir vs Gider)
        const ctxBar = document.getElementById('cashflowChart');
        if (ctxBar) {
            new Chart(ctxBar, {
                type: 'bar',
                data: {
                    labels: ['Bu Ay'],
                    datasets: [
                        {
                            label: 'Gelir',
                            data: [data.barIncome],
                            backgroundColor: '#198754'
                        },
                        {
                            label: 'Gider',
                            data: [data.barExpense],
                            backgroundColor: '#dc3545'
                        }
                    ]
                },
                options: { scales: { y: { beginAtZero: true } } }
            });
        }
        // ... (Mevcut grafik kodlarÄ±nÄ±n altÄ±na ekle) ...

        // 4. SANKEY CHART (Para AkÄ±ÅŸÄ±)
        const ctxSankey = document.getElementById('sankeyChart');
        if (ctxSankey && data.sankey.length > 0) {
            new Chart(ctxSankey, {
                type: 'sankey',
                data: {
                    datasets: [{
                        label: 'Para AkÄ±ÅŸÄ±',
                        data: data.sankey, // Server'dan gelen veri
                        colorFrom: (c) => c.dataset.data[c.dataIndex].to === 'CÃ¼zdan ğŸ’°' ? '#198754' : '#6c757d', // Gelirler YeÅŸil
                        colorTo: (c) => c.dataset.data[c.dataIndex].from === 'CÃ¼zdan ğŸ’°' ? '#dc3545' : '#6c757d', // Giderler KÄ±rmÄ±zÄ±
                        colorMode: 'gradient', // Renk geÃ§iÅŸli olsun
                        size: 'max', // GeniÅŸlik ayarÄ±
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false
                }
            });
        }

        // GRAFÄ°K DEÄÄ°ÅTÄ°RME FONKSÄ°YONU (GÃœNCELLENDÄ°)
        function changeChart() {
            const selected = document.getElementById('chartSelector').value;
            
            // Hepsini gizle
            document.getElementById('containerPie').classList.add('d-none');
            document.getElementById('containerLine').classList.add('d-none');
            document.getElementById('containerBar').classList.add('d-none');
            document.getElementById('containerSankey').classList.add('d-none'); // Yeni
            document.getElementById('containerPie').classList.remove('d-flex');

            // SeÃ§ileni aÃ§
            if (selected === 'pie') {
                document.getElementById('containerPie').classList.remove('d-none');
                document.getElementById('containerPie').classList.add('d-flex');
            } else if (selected === 'line') {
                document.getElementById('containerLine').classList.remove('d-none');
            } else if (selected === 'bar') {
                document.getElementById('containerBar').classList.remove('d-none');
            } else if (selected === 'sankey') { // Yeni
                document.getElementById('containerSankey').classList.remove('d-none');
            }
        }
    </script>
    
</body>
</html>