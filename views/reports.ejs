    </nav>

    <div class="container">
        <h2 class="text-center mb-4">ðŸ“… AylÄ±k Finans Raporu</h2>

        <div class="card shadow-sm p-4 mb-5">
            <form action="/reports" method="GET" class="row g-3 justify-content-center align-items-end">
                <div class="col-auto">
                    <label class="form-label">YÄ±l</label>
                    <input type="number" name="year" class="form-control" value="<%= year %>">
                </div>
                <div class="col-auto">
                    <label class="form-label">Ay</label>
                    <select name="month" class="form-select">
                        <% for(let i=1; i<=12; i++) { %>
                            <option value="<%= i %>" <%= i == month ? 'selected' : '' %>><%= i %>. Ay</option>
