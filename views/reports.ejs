<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Monthly Reports</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container">
            <a href="/dashboard" class="navbar-brand">ðŸ”™ Back to Dashboard</a>
            <span class="navbar-text text-white"><%= username %></span>
        </div>
    </nav>

    <div class="container">
        <h2 class="text-center mb-4">ðŸ“… Monthly Financial Report</h2>

        <div class="card shadow-sm p-4 mb-5">
            <form action="/reports" method="GET" class="row g-3 justify-content-center align-items-end">
                <div class="col-auto">
                    <label class="form-label">Year</label>
                    <input type="number" name="year" class="form-control" value="<%= year %>">
                </div>
                <div class="col-auto">
                    <label class="form-label">Month</label>
                    <select name="month" class="form-select">
                        <% for(let i=1; i<=12; i++) { %>
                            <option value="<%= i %>" <%= i == month ? 'selected' : '' %>><%= i %>. Month</option>
                        <% } %>
                    </select>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Fetch Report</button>
                </div>
            </form>
        </div>

        <div class="row text-center">
            <div class="col-md-4">
                <div class="card border-success mb-3">
                    <div class="card-header bg-success text-white">Total Income</div>
                    <div class="card-body">
                        <h3 class="text-success">+ $<%= parseFloat(income).toFixed(2) %></h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-danger mb-3">
                    <div class="card-header bg-danger text-white">Total Expense</div>
                    <div class="card-body">
                        <h3 class="text-danger">- $<%= parseFloat(expense).toFixed(2) %></h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-info mb-3">
                    <div class="card-header bg-info text-white">Net Status</div>
                    <div class="card-body">
                        <% let net = income - expense; %>
                        <h3 class="<%= net >= 0 ? 'text-success' : 'text-danger' %>">
                            $<%= net.toFixed(2) %>
                        </h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr class="my-5">

    <h3 class="text-center mb-4">ðŸ“ˆ Detailed Chart Analysis</h3>
    
    <div class="row mb-5">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white fw-bold text-center">Category Distribution</div>
                <div class="card-body">
                    <div style="height: 300px; position: relative;">
                        <canvas id="repPie"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white fw-bold text-center">30-Day Trend</div>
                <div class="card-body">
                    <div style="height: 300px; position: relative;">
                        <canvas id="repLine"></canvas>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white fw-bold text-center">This Month's Balance</div>
                <div class="card-body">
                    <div style="height: 300px; position: relative;">
                        <canvas id="repBar"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-5">
        <div class="col-12">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white fw-bold text-center">Cash Flow Diagram (Sankey) ðŸŒŠ</div>
                <div class="card-body">
                    <div style="height: 400px; position: relative;">
                        <canvas id="repSankey"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-chart-sankey"></script>
    <script>
        const d = <%- JSON.stringify(chartData) %>;
        const commonOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { position: 'bottom' } }
        };

        if(d) {
            new Chart(document.getElementById('repPie'), {
                type: 'pie',
                data: {
                    labels: d.pieLabels,
                    datasets: [{ 
                        data: d.pieValues, 
                        backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF'], 
                        hoverOffset: 4 
                    }]
                },
                options: commonOptions
            });

            new Chart(document.getElementById('repLine'), {
                type: 'line',
                data: {
                    labels: d.lineLabels,
                    datasets: [{
                        label: 'Balance Change',
                        data: d.lineValues,
                        fill: true,
                        tension: 0.4,
                        segment: {
                            borderColor: ctx => ctx.p0.parsed.y < ctx.p1.parsed.y ? '#198754' : '#dc3545',
                            backgroundColor: ctx => ctx.p0.parsed.y < ctx.p1.parsed.y ? 'rgba(25, 135, 84, 0.1)' : 'rgba(220, 53, 69, 0.1)'
                        },
                        borderWidth: 3
                    }]
                },
                options: { ...commonOptions, scales: { y: { beginAtZero: true } } }
            });

            new Chart(document.getElementById('repBar'), {
                type: 'bar',
                data: {
                    labels: ['Selected Month'],
                    datasets: [
                        { label: 'Income', data: [d.barIncome], backgroundColor: '#198754' },
                        { label: 'Expense', data: [d.barExpense], backgroundColor: '#dc3545' }
                    ]
                },
                options: { ...commonOptions, scales: { y: { beginAtZero: true } } }
            });

            if (d.sankey && d.sankey.length > 0) {
                new Chart(document.getElementById('repSankey'), {
                    type: 'sankey',
                    data: {
                        datasets: [{
                            label: 'Cash Flow',
                            data: d.sankey,
                            colorFrom: (c) => c.dataset.data[c.dataIndex].to === 'Wallet ðŸ’°' ? '#198754' : '#6c757d',
                            colorTo: (c) => c.dataset.data[c.dataIndex].from === 'Wallet ðŸ’°' ? '#dc3545' : '#6c757d',
                            colorMode: 'gradient',
                            size: 'max'
                        }]
                    },
                    options: commonOptions
                });
            }
        }
    </script>
</body>
</html>