                    </select>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Raporu Getir</button>
                </div>
            </form>
        </div>

        <div class="row text-center">
            <div class="col-md-4">
                <div class="card border-success mb-3">
                    <div class="card-header bg-success text-white">Toplam Gelir</div>
                    <div class="card-body">
                        <h3 class="text-success">+ <%= parseFloat(income).toFixed(2) %> â‚º</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-danger mb-3">
